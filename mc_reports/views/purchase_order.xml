<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="purchase_report_invoice">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o"><!--call to the our custom_report_layout here-->
                    <t t-call="mc_reports.custom_report_layout">
                        <div class="page">
                            <div class="col" align="left">
                                <span t-if="o.partner_id.name" t-field="o.partner_id.name"/>
                                <span t-if="o.partner_id.street" t-field="o.partner_id.street"/>
                                <br/>
                                <span t-if="o.partner_id.street2" t-field="o.partner_id.street2"/>
                                <span t-if="o.partner_id.city" t-field="o.partner_id.city"/>
                                <br/>
                                <span t-if="o.partner_id.zip" t-field="o.partner_id.zip"/>
                                <span t-if="o.partner_id.state_id.name" t-field="o.partner_id.state_id.name"/>
                                <br/>
                                <span t-if="o.partner_id.country_id.name" t-field="o.partner_id.country_id.name"/>
                                <br/>
                            </div>
                            <div>
                                <div id="informations" class="row mt32 mb32">
                                    <div class="col-4 mw-100 mb-2 mt-3" name="invoice">
                                        <strong>Purchase Order :</strong>
                                        <p class="m-0"
                                           style="color:#c0c0c0; font-family: 'Serif'; font-weight: bold; font-size:14px;">
                                            Project Number:
                                            <t t-esc="o.name"/>
                                        </p>
                                    </div>
                                    <div class="col-2 mw-100 mb-2 mt-3" name="date_order">
                                        <strong style="font-family: 'Serif'; font-weight: lighter; font-size:14px;">RFQ
                                            Date:
                                        </strong>
                                        <p class="m-0">
                                            <t t-esc="o.date_order" t-options='{"widget": "date"}'/>
                                        </p>
                                    </div>
                                    <div class="col-3 mw-100 mb-2 mt-3" name="due_date">
                                        <strong style="font-family: 'Serif'; font-weight: lighter; font-size:14px;">Due
                                            Date
                                        </strong>
                                        <p class="m-0">
                                            <t t-esc="o.date_planned" t-options='{"widget": "date"}'/>
                                        </p>
                                    </div>
                                    <div class="col-3 mw-100 mb-2 mt-3">

                                    </div>
                                </div>
                                <table class="table" name="invoice_line_table">
                                        <tr style="border-bottom:2px solid black;">
                                            <th name="th_description" class="text-start" style="width:60%;">
                                                <span>Description</span>
                                            </th>
                                            <th name="th_quantity" class="text-end" style="width:10%;">
                                                <span>Quantity</span>
                                            </th>
                                            <th name="th_priceunit" class="text-end " style="width:10%;">
                                                <span>Unit Price</span>
                                            </th>
                                            <th name="th_taxes" class="text-start" style="width:10%;">
                                                <span>Taxes</span>
                                            </th>
                                            <th name="th_subtotal" class="text-end" style="width:10%;">
                                                <span>Amount</span>
                                            </th>
                                        </tr>
                                        <t t-set="i" t-value="1"/>
                                        <t t-foreach="o.order_line" t-as="obj">
                                            <tr style="">
                                                <td name="account_invoice_line_name">
                                                    <span style="width:60%; font-size:12px;">
                                                        <t>
                                                            <span t-field="obj.name" t-options="{'widget': 'text'}"/>
                                                        </t>

                                                    </span>
                                                </td>
                                                <td class="text-end">
                                                    <span style="width:10%; font-size:14px;">
                                                        <t t-esc="obj.product_qty"/>
                                                    </span>
                                                </td>
                                                <td class="text-end">
                                                    <span class="text-nowrap" style="width:10%; font-size:14px;">
                                                        <t t-esc="'%.2f'%  obj.price_unit" data-oe-t-inline="true"/>
                                                    </span>
                                                </td>
                                                <td class="text-start">
                                                    <t t-foreach="obj.taxes_id" t-as="tax">
                                                        <span id="line_tax_ids" style="width:10%; font-size:14px;">
                                                            <t t-esc="tax.name"/>
                                                        </span>
                                                    </t>

                                                </td>
                                                <td class="text-end o_price_total">
                                                    <span class="text-nowrap"><span style="width:10%; font-size:14px;"><t t-esc="obj.currency_id.name"/></span>
                                                        <span class="oe_currency_value"
                                                              style="width:10%; font-size:14px;">
                                                            <t t-esc="'%.2f'% obj.price_subtotal"
                                                               data-oe-t-inline="true"/>
                                                        </span>
                                                    </span>
                                                </td>
                                            </tr>
                                            <t t-set="i" t-value="i+1"/>
                                        </t>
                                </table>
                                <div class="clearfix">
                                    <div id="total" class="row">
                                        <div class="col-6 ms-auto">
                                            <table class="table table-sm"
                                                   style="page-break-inside: avoid; position:relative;">
                                                <tbody>
                                                    <tr class="o_subtotal" style="border-top:1px solid #D3D3D3;">
                                                        <td>
                                                            <strong>Untaxed Amount</strong>
                                                        </td>
                                                        <td class="text-end">
                                                            <span><span style="width:10%; font-size:14px;"><t t-esc="obj.currency_id.name"/></span>
                                                                <span class="oe_currency_value">
                                                                    <t t-esc="'%.2f'% o.amount_untaxed"
                                                                       data-oe-t-inline="true"/>
                                                                </span>
                                                            </span>
                                                        </td>
                                                    </tr>
                                                    <tr style="">
                                                        <td>
                                                            <span class="text-nowrap">Taxes</span>
                                                        </td>
                                                        <td class="text-end o_price_total"><span style="width:10%; font-size:14px;"><t t-esc="obj.currency_id.name"/></span>
                                                            <span class="text-nowrap">
                                                                <t t-esc="'%.2f'% o.amount_tax"
                                                                   data-oe-t-inline="true"/>
                                                            </span>
                                                        </td>
                                                    </tr>
                                                    <tr class="border-black o_total">
                                                        <td>
                                                            <strong>Total</strong>
                                                        </td>
                                                        <td class="text-end">
                                                            <span class="text-nowrap"><span style="width:10%; font-size:14px;"><t t-esc="obj.currency_id.name"/></span>
                                                                <span class="oe_currency_value">
                                                                    <t t-esc="'%.2f'% o.amount_total"
                                                                       data-oe-t-inline="true"/>
                                                                </span>
                                                            </span>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <br></br>
                                <p>
                                    Incoterm:
                                    <span style="font-family: 'Serif'; font-weight: lighter; font-size:14px;">FREE ON
                                        BOARD
                                    </span>
                                </p>
                                <br></br>
                                <br></br>
                                <br></br>
                                <br></br>
                                <br></br>
                                <br></br>
                                <p style="width:95%; line-height: 2.5; font-family: 'Serif'; font-weight: lighter; font-size:14px;">
                                    We kindly request your quotation for the attached list of products and / or
                                    services, to be submitted no later than
                                    the specified deadline.
                                    <br></br>
                                    In case of any questions, please feel free to contact your designated contact
                                    partner at Trade Nomadic for further
                                    assistance.
                                </p>
                                <!--                                <p style="width:95%;  line-height: 2.2;">-->
                                <!--                                    In case of any questions, please feel free to contact your designated contact-->
                                <!--                                    partner at Trade Nomadic for further-->
                                <!--                                    assistance.-->
                                <!--                                </p>-->
                                <p style="font-family: 'Serif'; font-weight: lighter; font-size:14px;">
                                    Your Trade Nomadic Team
                                </p>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        <template id="report_purchaseorder_inherit" inherit_id="purchase.report_purchaseorder">
            <xpath expr="//t[@t-call='purchase.report_purchaseorder_document']" position="replace">
                <t t-call="mc_reports.purchase_report_invoice" t-lang="o.partner_id.lang"/>
            </xpath>
        </template>
    </data>
</odoo>